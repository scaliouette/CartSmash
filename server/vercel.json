{
  "version": 2,
  "name": "cartsmash-server",
  "description": "CARTSMASH - AI-powered grocery list parser server",
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "nodejs18.x"
      }
    }
  ],
  "routes": [
    {
      "src": "/health",
      "dest": "server.js",
      "methods": ["GET"]
    },
    {
      "src": "/api/health",
      "dest": "server.js",
      "methods": ["GET"]
    },
    {
      "src": "/api/auth/(.*)",
      "dest": "server.js",
      "methods": ["GET", "POST", "DELETE"]
    },
    {
      "src": "/api/kroger/(.*)",
      "dest": "server.js",
      "methods": ["GET", "POST", "PUT", "DELETE"]
    },
    {
      "src": "/api/ai/(.*)",
      "dest": "server.js",
      "methods": ["POST"]
    },
    {
      "src": "/api/cart/(.*)",
      "dest": "server.js",
      "methods": ["GET", "POST", "PUT", "DELETE"]
    },
    {
      "src": "/api/recipes/(.*)",
      "dest": "server.js",
      "methods": ["GET", "POST", "PUT", "DELETE"]
    },
    {
      "src": "/api/account/(.*)",
      "dest": "server.js",
      "methods": ["GET", "POST", "PUT", "DELETE"]
    },
    {
      "src": "/api/analytics/(.*)",
      "dest": "server.js",
      "methods": ["GET", "POST"]
    },
    {
      "src": "/api/users/(.*)",
      "dest": "server.js",
      "methods": ["GET", "POST", "PUT", "DELETE"]
    },
    {
      "src": "/api/stores/(.*)",
      "dest": "server.js",
      "methods": ["GET", "POST", "PUT", "DELETE"]
    },
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "server.js": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "regions": ["iad1"],
  "github": {
    "enabled": false
  }
}